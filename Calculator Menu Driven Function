#include<stdio.h>
#include<conio.h>
#include<iostream.h>
class Cal
{
 public:
 int num1,num2,output;
 void input()
 {
  cout<<"Enter two numbers";
  cin>>num1>>num2;
 }
};

class Add : public Cal
{
 public:
 void sum()
 {
  output=num1+num2;
  cout<<output;
 }
};

class Sub : public Cal
{
 public:
 void minus()
 {
 output=num1-num2;
 cout<<output;
 }

};
void main()
{
 int ch;
 clrscr();
 cout<<"Press 1 for addition"<<endl;
 cout<<"Press 2 for subtraction"<<endl;
 cin>>ch;
 switch(ch)
 {

 case 1:
  Add a;
  a.input();
  a.sum();
  break;
 case 2:
  Sub s;
  s.input();
  s.minus();
  break;
 default:
 cout<<"Invalid choice...";
  break;
 }
 getch();
}
