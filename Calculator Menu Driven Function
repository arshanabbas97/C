#include<stdio.h>
#include<conio.h>
#include<iostream.h>
class Cal
{
 public:
 int num1,num2,output;
 void input()
 {
  cout<<"Enter two numbers";
  cin>>num1>>num2;
 }
};

class Add : public Cal
{
 public:

 void sum()
 {
  output=num1+num2;
 }
};

class Sub : public Cal
{
 public:

 void minus()
 {
 output=num1-num2;
 }

};

class Display : public Add
{
 public:
 void show()
 {
  cout<<output;
 }
};

void main()
{
 int ch;
 clrscr();
 cout<<"Press 1 for addition"<<endl;
 cout<<"Press 2 for subtraction"<<endl;
 cin>>ch;
 switch(ch)
 {
  Display d;
 case 1:
  d.input();
  d.sum();
  d.show();
  break;
 case 2:
  d.input();
  d.sum();
  d.show();
 default:
 cout<<"Invalid choice...";

 }

 getch();
}
