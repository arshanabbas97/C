--------------------------------------------------*Default Constructor*---------------------------------------------------------
#include<stdio.h>
#include<conio.h>
#include<iostream.h>
class ONE
{
int len,width,input,a;
public:
ONE()
{
len=20;
width=25;
}
void fun()
{
cout<<"Pre Define value of Length and Width is 20 and 25 \n";
cout<<"Enter Input "<<endl;
cin>>input;
a=len*width;
cout<<"Length Into Width Equal to "<<a<<endl;
cout<<"If you want to proceed press 1 otherwise 0";
cin>>a1;
if(a1==1)
{
a=len*width*input;
cout<<"value of length * width * input = "<<a<<endl;
}
else
{
cout<<"Error";
}
}
};
void main()
{
clrscr();
ONE abc;
abc.fun();
getch();
}
--------------------------------------------------------------------------------------------------------------------------------

-------------------------------------------------*Single Perameter Constructor*-------------------------------------------------
#include<stdio.h>
#include<conio.h>
#include<iostream.h>
class ONE
{
int side,ar;
ONE(int lee)
{
side=lee;
}
void fun()
{
ar=side*side;
cout<<ar;
}
};
void main()
{
clrscr();
ONE abc(20);
abc.fun();
getch();
}
--------------------------------------------------------------------------------------------------------------------------------

----------------------------------------------------*Two Perameter Constructor*-------------------------------------------------
#include<stdio.h>
#include<conio.h>
#include<iostream.h>
class REC
{
public:
int l,b,ar;
REC(int x,int y)
{
l=x;
b=y;
}
void fun()
{
ar=l*b;
cout<<ar;
}
};
void main()
{
clrscr();
REC r(5,5);
r.fun();
getch();
}
--------------------------------------------------------------------------------------------------------------------------------
